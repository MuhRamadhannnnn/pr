#include <iostream>
using namespace std;

// Struktur node
struct Node {
    int data;
    Node* next;
};

// Fungsi untuk menghitung jumlah elemen dalam linked list
int hitungElemen(Node* head) {
    int jumlah = 0;
    Node* current = head;

    while (current != NULL) {
        jumlah++;
        current = current->next;
    }

    return jumlah;
}

// Fungsi untuk menambahkan node di akhir linked list
void tambahNode(Node*& head, int nilai) {
    Node* newNode = new Node;
    newNode->data = nilai;
    newNode->next = NULL;

    if (head == NULL) {
        head = newNode;
    } else {
        Node* temp = head;
        while (temp->next != NULL) {
            temp = temp->next;
        }
        temp->next = newNode;
    }
}

// Fungsi utama
int main() {
    Node* head = NULL;

    // Menambahkan beberapa node ke linked list
    tambahNode(head, 10);
    tambahNode(head, 20);
    tambahNode(head, 30);
    tambahNode(head, 40);

    // Menampilkan jumlah elemen
    cout << "Jumlah elemen dalam linked list: " << hitungElemen(head) << endl;

    return 0;
}
